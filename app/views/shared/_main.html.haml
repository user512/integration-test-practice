.row
  .col-md-10.col-md-offset-1
    .col-md-8
    - flash.each do |name, msg|
      %div{:class => "alert alert-#{"#{name}"}"}
        %a.close{"data-dismiss" => "alert", :href => "#"}
        = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    = yield
    .col-md-4
    = yield :sidebar